<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des Tâches</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container main-content d-flex flex-column justify-content-center">
        <h1 class="mt-5">Liste des Tâches</h1>
        <a href="/tasks/new" class="btn btn-primary mb-3">Ajouter une nouvelle tâche</a>
        <ul class="list-group pt-3">
            <% tasks.forEach(function(task) { %>
                <li class="card mb-3">
                    <div>
                        <div class="card-header">
                            <%= task.compeleter ? 'complétée' : 'non complétée' %>
                        </div>
                        <a href="/tasks/<%= task.id %>"><h5 class="card-title m-2"><%= task.titre %></h5></a>
                        <p class="card-text m-2"><%= task.description %></p>
                    </div>
                </li>
            <% }); %>
        </ul>
        <a href="/" class="btn btn-secondary mt-3">Retour à l'accueil</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
